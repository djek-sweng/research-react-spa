{
  "name": "nestjs-api",
  "version": "1.0.0",
  "description": "NestJS API (Authorization Bearer, Postgres)",
  "author": "djek-sweng",
  "license": "ISC",
  "scripts": {
    "prisma:dev:studio": "prisma studio",
    "prisma:dev:deploy": "prisma migrate deploy",
    "prisma:test:studio": "dotenv -e .env.test -- prisma studio",
    "prisma:test:deploy": "dotenv -e .env.test -- prisma migrate deploy",
    "prisma:prod:studio": "dotenv -e .env.prod -- prisma studio",
    "prisma:prod:deploy": "dotenv -e .env.prod -- prisma migrate deploy",
    "docker:down": "cd ./docker/postgres; docker compose down",
    "db:dev:up": "cd ./docker/postgres; docker compose up db-dev -d",
    "db:dev:down": "cd ./docker/postgres; docker compose down db-dev",
    "db:dev:restart": "npm run db:dev:down && npm run db:dev:up && sleep 1 && npm run prisma:dev:deploy",
    "db:test:up": "cd ./docker/postgres; docker compose up db-test -d",
    "db:test:down": "cd ./docker/postgres; docker compose down db-test",
    "db:test:restart": "npm run db:test:down && npm run db:test:up && sleep 1 && npm run prisma:test:deploy",
    "db:prod:up": "cd ./docker/postgres; docker compose up db-prod -d",
    "db:prod:down": "cd ./docker/postgres; docker compose down db-prod",
    "db:prod:restart": "npm run db:prod:down && npm run db:prod:up && sleep 1 && npm run prisma:prod:deploy",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "dotenv -e .env.prod -- node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm run db:test:restart && dotenv -e .env.test -- jest --watch --no-cache --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.1",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.1",
    "@nestjs/swagger": "^7.2.0",
    "@prisma/client": "^5.8.1",
    "argon2": "^0.31.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv-cli": "^7.3.0",
    "helmet": "^7.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "pactum": "^3.6.0",
    "prettier": "^3.2.4",
    "prisma": "^5.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
